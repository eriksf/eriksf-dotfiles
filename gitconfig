[alias]
        pullff = pull --ff-only
        ignore = update-index --assume-unchanged
        ignore-not = update-index --no-assume-unchanged

[color]
        ui = auto

[color "grep"]
        match = cyan bold
        selected = blue
        context = normal
        filename = magenta
        linenumber = green
        separator = yellow
        function = blue

[pretty]
        line = "%C(auto)%h%d %s %C(yellow)by %C(blue)%an %C(green)%ar"
        compact = "%C(auto)%h %s %C(green)%ar%n %C(auto)%d%n"
        detail = "%C(auto)%h %s%n  %C(yellow)by %C(blue)%an %C(magenta)<%ae> [%G?] %C(green)%ar%n %C(auto)%d%n"

[grep]
        lineNumber = true

[push]
        default = upstream

[credential]
        helper = osxkeychain

[commit]
        template = ~/.gitmessage

# Allow local customizations in the .gitconfig_local file
[include]
        path = ~/.gitconfig_local

[core]
        excludesfile = ~/.gitignore_global
